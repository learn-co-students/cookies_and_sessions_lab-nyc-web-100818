<h1>Add a product</h1>

<%= form_tag add_product_path do %>
  <%= label_tag :product %>
  <%= text_field_tag :product %>
  <%= submit_tag 'add to cart' %>
<% end %>

<h2>Your Cart</h2>
<% if cart.count == 0 %>
  <p>Your cart is empty.</p>
<% else %>
  <p>Items:</p>
  <ul>
    <% cart.each do |item| %>
      <li><%= item %></li>
    <% end %>
  </ul>
<% end %>